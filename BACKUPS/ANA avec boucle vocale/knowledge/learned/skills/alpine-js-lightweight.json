  "description": "Alpine.js lightweight framework patterns",
  "skills": [
    {"id": "alp01", "type": "setup", "name": "Install Alpine", "description": "Add to project", "pattern": "<!-- CDN -->\n<script defer src=\"https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js\"></script>\n\n<!-- NPM -->\nnpm install alpinejs\nimport Alpine from 'alpinejs'\nwindow.Alpine = Alpine\nAlpine.start()", "example": "Install"},
    {"id": "alp02", "type": "data", "name": "x-data", "description": "Component state", "pattern": "<div x-data=\"{ open: false, count: 0 }\">\n  <button @click=\"open = !open\">Toggle</button>\n  <div x-show=\"open\">Content</div>\n  <p>Count: <span x-text=\"count\"></span></p>\n</div>", "example": "x-data"},
    {"id": "alp03", "type": "text", "name": "x-text", "description": "Text content", "pattern": "<div x-data=\"{ message: 'Hello' }\">\n  <span x-text=\"message\"></span>\n  <span x-text=\"message.toUpperCase()\"></span>\n  <span x-text=\"`Count: ${count}`\"></span>\n</div>", "example": "x-text"},
    {"id": "alp04", "type": "html", "name": "x-html", "description": "HTML content", "pattern": "<div x-data=\"{ content: '<strong>Bold</strong>' }\">\n  <div x-html=\"content\"></div>\n</div>", "example": "x-html"},
    {"id": "alp05", "type": "show", "name": "x-show", "description": "Toggle visibility", "pattern": "<div x-data=\"{ open: false }\">\n  <button @click=\"open = !open\">Toggle</button>\n  \n  <!-- Uses display: none -->\n  <div x-show=\"open\">Visible when open</div>\n  \n  <!-- With transition -->\n  <div x-show=\"open\" x-transition>Animated</div>\n</div>", "example": "x-show"},
    {"id": "alp06", "type": "if", "name": "x-if", "description": "Conditional render", "pattern": "<div x-data=\"{ show: false }\">\n  <button @click=\"show = !show\">Toggle</button>\n  \n  <!-- Removes from DOM -->\n  <template x-if=\"show\">\n    <div>Only in DOM when true</div>\n  </template>\n</div>", "example": "x-if"},
    {"id": "alp07", "type": "for", "name": "x-for", "description": "Loop rendering", "pattern": "<div x-data=\"{ items: ['A', 'B', 'C'] }\">\n  <template x-for=\"(item, index) in items\" :key=\"index\">\n    <li x-text=\"item\"></li>\n  </template>\n</div>\n\n<!-- Objects -->\n<template x-for=\"item in items\" :key=\"item.id\">\n  <div x-text=\"item.name\"></div>\n</template>", "example": "x-for"},
    {"id": "alp08", "type": "bind", "name": "x-bind", "description": "Bind attributes", "pattern": "<div x-data=\"{ color: 'red', url: '/page' }\">\n  <!-- Full syntax -->\n  <div x-bind:class=\"color\">Colored</div>\n  \n  <!-- Shorthand -->\n  <a :href=\"url\">Link</a>\n  <div :class=\"{ 'active': isActive, 'error': hasError }\">Classes</div>\n  <div :style=\"{ color: textColor, fontSize: size + 'px' }\">Styled</div>\n</div>", "example": "x-bind"},
    {"id": "alp09", "type": "on", "name": "x-on", "description": "Event handling", "pattern": "<div x-data=\"{ count: 0 }\">\n  <!-- Full syntax -->\n  <button x-on:click=\"count++\">+</button>\n  \n  <!-- Shorthand -->\n  <button @click=\"count--\">-</button>\n  <button @click=\"alert('Hello')\">Alert</button>\n  \n  <!-- Modifiers -->\n  <button @click.prevent=\"submit()\">Prevent default</button>\n  <button @click.stop=\"handler()\">Stop propagation</button>\n  <button @click.once=\"runOnce()\">Run once</button>\n  <input @keyup.enter=\"search()\" />\n  <input @keyup.escape=\"close()\" />\n</div>", "example": "x-on"},
    {"id": "alp10", "type": "model", "name": "x-model", "description": "Two-way binding", "pattern": "<div x-data=\"{ name: '', agreed: false, color: 'red' }\">\n  <input x-model=\"name\" />\n  <p x-text=\"name\"></p>\n  \n  <input type=\"checkbox\" x-model=\"agreed\" />\n  \n  <select x-model=\"color\">\n    <option>red</option>\n    <option>blue</option>\n  </select>\n  \n  <!-- Modifiers -->\n  <input x-model.lazy=\"search\" />     <!-- On change -->\n  <input x-model.number=\"age\" />      <!-- Parse as number -->\n  <input x-model.debounce=\"query\" />  <!-- Debounce -->\n  <input x-model.debounce.500ms=\"q\" />\n</div>", "example": "x-model"},
    {"id": "alp11", "type": "effect", "name": "x-effect", "description": "Side effects", "pattern": "<div x-data=\"{ count: 0 }\">\n  <button @click=\"count++\">+</button>\n  \n  <!-- Runs when dependencies change -->\n  <div x-effect=\"console.log('Count is:', count)\"></div>\n</div>", "example": "x-effect"},
    {"id": "alp12", "type": "init", "name": "x-init", "description": "Initialization", "pattern": "<div x-data=\"{ users: [] }\" x-init=\"users = await (await fetch('/api/users')).json()\">\n  <template x-for=\"user in users\" :key=\"user.id\">\n    <div x-text=\"user.name\"></div>\n  </template>\n</div>\n\n<!-- On mount -->\n<div x-data x-init=\"$el.focus()\">", "example": "x-init"},
    {"id": "alp13", "type": "ref", "name": "x-ref", "description": "Element references", "pattern": "<div x-data>\n  <input x-ref=\"input\" />\n  <button @click=\"$refs.input.focus()\">Focus</button>\n  <button @click=\"$refs.input.value = ''\">Clear</button>\n</div>", "example": "x-ref"},
    {"id": "alp14", "type": "cloak", "name": "x-cloak", "description": "Hide until ready", "pattern": "<!-- Add CSS -->\n<style>\n  [x-cloak] { display: none !important; }\n</style>\n\n<!-- Hide content until Alpine loads -->\n<div x-data=\"{ ready: false }\" x-cloak>\n  <div x-show=\"ready\">Content</div>\n</div>", "example": "x-cloak"},
    {"id": "alp15", "type": "transition", "name": "x-transition", "description": "Animations", "pattern": "<div x-data=\"{ open: false }\">\n  <button @click=\"open = !open\">Toggle</button>\n  \n  <!-- Default transition -->\n  <div x-show=\"open\" x-transition>Animated</div>\n  \n  <!-- Custom -->\n  <div\n    x-show=\"open\"\n    x-transition:enter=\"transition ease-out duration-300\"\n    x-transition:enter-start=\"opacity-0 scale-90\"\n    x-transition:enter-end=\"opacity-100 scale-100\"\n    x-transition:leave=\"transition ease-in duration-200\"\n    x-transition:leave-start=\"opacity-100 scale-100\"\n    x-transition:leave-end=\"opacity-0 scale-90\"\n  >\n    Custom animation\n  </div>\n</div>", "example": "Transition"},
    {"id": "alp16", "type": "teleport", "name": "x-teleport", "description": "Portal content", "pattern": "<div x-data=\"{ open: false }\">\n  <button @click=\"open = true\">Open Modal</button>\n  \n  <template x-teleport=\"body\">\n    <div x-show=\"open\" class=\"modal\">\n      <p>Modal content</p>\n      <button @click=\"open = false\">Close</button>\n    </div>\n  </template>\n</div>", "example": "Teleport"},
    {"id": "alp17", "type": "ignore", "name": "x-ignore", "description": "Skip initialization", "pattern": "<div x-data=\"{ count: 0 }\">\n  <span x-text=\"count\"></span>\n  \n  <!-- Alpine ignores this subtree -->\n  <div x-ignore>\n    <span x-text=\"count\">Won't be processed</span>\n  </div>\n</div>", "example": "x-ignore"},
    {"id": "alp18", "type": "magic", "name": "$el", "description": "Current element", "pattern": "<button x-data @click=\"$el.classList.toggle('active')\">\n  Toggle class\n</button>\n\n<input x-data @change=\"console.log($el.value)\" />", "example": "$el"},
    {"id": "alp19", "type": "magic", "name": "$watch", "description": "Watch changes", "pattern": "<div x-data=\"{ count: 0 }\" x-init=\"$watch('count', (value, old) => console.log(value, old))\">\n  <button @click=\"count++\">+</button>\n</div>\n\n<!-- Deep watch -->\n<div x-data=\"{ user: { name: '' } }\" x-init=\"$watch('user', value => console.log(value), { deep: true })\">", "example": "$watch"},
    {"id": "alp20", "type": "magic", "name": "$dispatch", "description": "Dispatch events", "pattern": "<!-- Child -->\n<button x-data @click=\"$dispatch('custom-event', { id: 123 })\">\n  Dispatch\n</button>\n\n<!-- Parent -->\n<div x-data @custom-event.window=\"console.log($event.detail.id)\">\n  <button>...</button>\n</div>", "example": "$dispatch"},
    {"id": "alp21", "type": "magic", "name": "$nextTick", "description": "After DOM update", "pattern": "<div x-data=\"{ name: '' }\">\n  <input x-model=\"name\" />\n  <button @click=\"name = 'John'; $nextTick(() => console.log($refs.display.textContent))\">\n    Update\n  </button>\n  <span x-ref=\"display\" x-text=\"name\"></span>\n</div>", "example": "$nextTick"},
    {"id": "alp22", "type": "magic", "name": "$store", "description": "Global store", "pattern": "<!-- Define store -->\n<script>\n  document.addEventListener('alpine:init', () => {\n    Alpine.store('user', {\n      name: 'John',\n      login() { this.name = 'Jane' }\n    })\n  })\n</script>\n\n<!-- Use store -->\n<div x-data>\n  <span x-text=\"$store.user.name\"></span>\n  <button @click=\"$store.user.login()\">Login</button>\n</div>", "example": "$store"},
    {"id": "alp23", "type": "magic", "name": "$data", "description": "Component data", "pattern": "<div x-data=\"{ foo: 'bar' }\" x-init=\"console.log($data)\">\n  <!-- Access all component data -->\n  <button @click=\"Object.keys($data).forEach(k => console.log(k))\">Log keys</button>\n</div>", "example": "$data"},
    {"id": "alp24", "type": "magic", "name": "$root", "description": "Root element", "pattern": "<div x-data=\"{ open: false }\">\n  <div>\n    <div>\n      <button @click=\"$root.classList.toggle('expanded')\">\n        Toggle root class\n      </button>\n    </div>\n  </div>\n</div>", "example": "$root"},
    {"id": "alp25", "type": "component", "name": "Alpine.data()", "description": "Reusable components", "pattern": "<script>\n  document.addEventListener('alpine:init', () => {\n    Alpine.data('dropdown', () => ({\n      open: false,\n      toggle() { this.open = !this.open },\n      close() { this.open = false }\n    }))\n  })\n</script>\n\n<div x-data=\"dropdown\">\n  <button @click=\"toggle()\">Toggle</button>\n  <div x-show=\"open\" @click.outside=\"close()\">Menu</div>\n</div>", "example": "Component"},
    {"id": "alp26", "type": "directive", "name": "Alpine.directive()", "description": "Custom directives", "pattern": "<script>\n  document.addEventListener('alpine:init', () => {\n    Alpine.directive('tooltip', (el, { expression }) => {\n      el.setAttribute('title', expression)\n    })\n  })\n</script>\n\n<button x-data x-tooltip=\"'Click me'\">Hover</button>", "example": "Directive"},
    {"id": "alp27", "type": "plugin", "name": "Plugins", "description": "Official plugins", "pattern": "<!-- Mask -->\n<script src=\"https://unpkg.com/@alpinejs/mask\"></script>\n<input x-data x-mask=\"(999) 999-9999\" />\n\n<!-- Intersect -->\n<script src=\"https://unpkg.com/@alpinejs/intersect\"></script>\n<div x-data x-intersect=\"console.log('Visible!')\">...</div>\n\n<!-- Persist -->\n<script src=\"https://unpkg.com/@alpinejs/persist\"></script>\n<div x-data=\"{ count: $persist(0) }\">...</div>", "example": "Plugins"},
    {"id": "alp28", "type": "async", "name": "Async Operations", "description": "Fetch data", "pattern": "<div\n  x-data=\"{\n    users: [],\n    loading: false,\n    async fetchUsers() {\n      this.loading = true;\n      this.users = await (await fetch('/api/users')).json();\n      this.loading = false;\n    }\n  }\"\n  x-init=\"fetchUsers()\"\n>\n  <div x-show=\"loading\">Loading...</div>\n  <template x-for=\"user in users\">\n    <div x-text=\"user.name\"></div>\n  </template>\n</div>", "example": "Async"},
    {"id": "alp29", "type": "pattern", "name": "Dropdown Pattern", "description": "Common patterns", "pattern": "<div x-data=\"{ open: false }\" @click.outside=\"open = false\">\n  <button @click=\"open = !open\">Menu</button>\n  <div x-show=\"open\" x-transition>\n    <a href=\"#\">Item 1</a>\n    <a href=\"#\">Item 2</a>\n  </div>\n</div>", "example": "Dropdown"},
    {"id": "alp30", "type": "pattern", "name": "Modal Pattern", "description": "Modal dialog", "pattern": "<div x-data=\"{ open: false }\">\n  <button @click=\"open = true\">Open</button>\n  \n  <template x-teleport=\"body\">\n    <div x-show=\"open\" class=\"overlay\" @click.self=\"open = false\">\n      <div x-show=\"open\" x-transition class=\"modal\">\n        <h2>Modal</h2>\n        <button @click=\"open = false\">Close</button>\n      </div>\n    </div>\n  </template>\n</div>", "example": "Modal"}
  ]
}
