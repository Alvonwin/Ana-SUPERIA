      "description": "Reusable code",
      "pattern": "module \"vpc\" { source = \"./modules/vpc\" }",
      "example": "Modules usage"
    },
    {
      "id": "tf018",
      "type": "modules",
      "name": "Module Sources",
      "description": "Where modules come from",
      "pattern": "Local path, Git, Registry, S3",
      "example": "Modules usage"
    },
    {
      "id": "tf019",
      "type": "modules",
      "name": "Module Registry",
      "description": "Public modules",
      "pattern": "registry.terraform.io, versioned modules",
      "example": "Modules usage"
    },
    {
      "id": "tf020",
      "type": "expressions",
      "name": "Expressions",
      "description": "Dynamic values",
      "pattern": "Conditionals, for_each, count, dynamic blocks",
      "example": "Expressions usage"
    },
    {
      "id": "tf021",
      "type": "expressions",
      "name": "For Each",
      "description": "Iterate resources",
      "pattern": "for_each = toset(var.names), each.key/value",
      "example": "Expressions usage"
    },
    {
      "id": "tf022",
      "type": "expressions",
      "name": "Count",
      "description": "Multiple instances",
      "pattern": "count = 3, count.index",
      "example": "Expressions usage"
    },
    {
      "id": "tf023",
      "type": "expressions",
      "name": "Conditionals",
      "description": "Conditional logic",
      "pattern": "condition ? true_val : false_val",
      "example": "Expressions usage"
    },
    {
      "id": "tf024",
      "type": "functions",
      "name": "Built-in Functions",
      "description": "Transform data",
      "pattern": "join, split, lookup, merge, file, templatefile",
      "example": "Functions usage"
    },
    {
      "id": "tf025",
      "type": "provisioners",
      "name": "Provisioners",
      "description": "Run commands",
      "pattern": "local-exec, remote-exec, file, last resort",
      "example": "Provisioners usage"
    },
    {
      "id": "tf026",
      "type": "workspaces",
      "name": "Workspaces",
      "description": "Multiple envs",
      "pattern": "terraform workspace new dev, select, list",
      "example": "Workspaces usage"
    },
    {
      "id": "tf027",
      "type": "best-practices",
      "name": "File Structure",
