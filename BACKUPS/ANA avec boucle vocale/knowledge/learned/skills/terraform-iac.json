{
  "category": "terraform-iac",
  "version": "1.0.0",
  "skills": [
    {
      "id": "tf001",
      "type": "fundamentals",
      "name": "Terraform Basics",
      "description": "IaC tool",
      "pattern": "Declarative, providers, resources, state",
      "example": "Fundamentals usage"
    },
    {
      "id": "tf002",
      "type": "fundamentals",
      "name": "HCL Syntax",
      "description": "Configuration language",
      "pattern": "resource \"type\" \"name\" { ... }, blocks",
      "example": "Fundamentals usage"
    },
    {
      "id": "tf003",
      "type": "fundamentals",
      "name": "Providers",
      "description": "Cloud plugins",
      "pattern": "provider \"aws\" { region = \"us-east-1\" }",
      "example": "Fundamentals usage"
    },
    {
      "id": "tf004",
      "type": "fundamentals",
      "name": "Resources",
      "description": "Infrastructure objects",
      "pattern": "resource \"aws_instance\" \"web\" { ami = \"...\" }",
      "example": "Fundamentals usage"
    },
    {
      "id": "tf005",
      "type": "fundamentals",
      "name": "Data Sources",
      "description": "Read external data",
      "pattern": "data \"aws_ami\" \"latest\" { ... }",
      "example": "Fundamentals usage"
    },
    {
      "id": "tf006",
      "type": "workflow",
      "name": "Init",
      "description": "Initialize",
      "pattern": "terraform init, download providers, setup backend",
      "example": "Workflow usage"
    },
    {
      "id": "tf007",
      "type": "workflow",
      "name": "Plan",
      "description": "Preview changes",
      "pattern": "terraform plan, show what will change",
      "example": "Workflow usage"
    },
    {
      "id": "tf008",
      "type": "workflow",
      "name": "Apply",
      "description": "Apply changes",
      "pattern": "terraform apply, create/update resources",
      "example": "Workflow usage"
    },
    {
      "id": "tf009",
      "type": "workflow",
      "name": "Destroy",
      "description": "Remove resources",
      "pattern": "terraform destroy, clean up infrastructure",
      "example": "Workflow usage"
    },
    {
      "id": "tf010",
      "type": "state",
      "name": "State File",
      "description": "Track resources",
      "pattern": "terraform.tfstate, maps config to real resources",
      "example": "State usage"
    },
    {
      "id": "tf011",
      "type": "state",
      "name": "Remote State",
      "description": "Shared state",
      "pattern": "S3 + DynamoDB backend, state locking",
      "example": "State usage"
    },
    {
      "id": "tf012",
      "type": "state",
      "name": "State Commands",
      "description": "Manage state",
      "pattern": "terraform state list, mv, rm, import",
      "example": "State usage"
    },
    {
      "id": "tf013",
      "type": "variables",
      "name": "Input Variables",
      "description": "Parameters",
      "pattern": "variable \"name\" { type = string, default = \"\" }",
      "example": "Variables usage"
    },
    {
      "id": "tf014",
      "type": "variables",
      "name": "Variable Types",
      "description": "Type constraints",
      "pattern": "string, number, bool, list, map, object",
      "example": "Variables usage"
    },
    {
      "id": "tf015",
      "type": "variables",
      "name": "Outputs",
      "description": "Export values",
      "pattern": "output \"ip\" { value = aws_instance.web.public_ip }",
      "example": "Variables usage"
    },
    {
      "id": "tf016",
      "type": "variables",
      "name": "Locals",
      "description": "Local values",
      "pattern": "locals { name = \"${var.env}-app\" }",
      "example": "Variables usage"
    },
    {
      "id": "tf017",
      "type": "modules",
