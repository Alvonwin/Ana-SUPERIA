      "pattern": "snake_case, descriptive, environment prefixes",
      "example": "Best-practices usage"
    },
    {
      "id": "tf029",
      "type": "testing",
      "name": "Terraform Testing",
      "description": "Validate code",
      "pattern": "terraform validate, fmt, tflint, terratest",
      "example": "Testing usage"
    },
    {
      "id": "tf030",
      "type": "cloud",
      "name": "Terraform Cloud",
      "description": "Managed Terraform",
      "pattern": "Remote runs, VCS integration, policy as code",
      "example": "Cloud usage"
    }
  ]
